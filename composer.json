{    
    "require": {
        "tinybutstrong/tinybutstrong": "*"
    },
    "require-dev": {
        "phpcompatibility/phpcompatibility-wp": "*",
        "tinybutstrong/opentbs": "*",
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "*",
        "wp-cli/i18n-command": "*",
        "wp-coding-standards/wpcs": "*",
        "yoast/phpunit-polyfills": "*",
        "yoast/wp-test-utils": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "rm -rf admin/vendor/tinybutstrong",
            "cp -r vendor/tinybutstrong admin/vendor/"
        ],
        "post-update-cmd": [
            "rm -rf admin/vendor/tinybutstrong",
            "cp -r vendor/tinybutstrong admin/vendor/"
        ],
        "phpunit": "vendor/bin/phpunit",
        "test": "phpunit",
        "phpcs": "@php ./vendor/bin/phpcs --standard=.phpcs.xml.dist",
        "phpcbf": "@php ./vendor/bin/phpcbf --standard=.phpcs.xml.dist"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        }
    },
    "autoload": {
        "psr-4": {
            "Resolate\\": "includes/",
            "Resolate\\Admin\\": "admin/",
            "Resolate\\Public\\": "public/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Resolate\\Tests\\": "tests/"
        }
    },
    "type": "project"
}
